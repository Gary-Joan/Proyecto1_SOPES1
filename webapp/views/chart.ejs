  <div style="width:800px; margin:0 auto;"><h4>METRICAS DE RAM Y CPU SERVIDOR A Y SERVIDOR B</h4></div>
  
  <div style="width:800px; margin:0 auto;"><canvas id="myChart"></canvas></div>
  <script>
        var ctx = document.getElementById("myChart");
        var myChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: ["RAM 1", "RAM 2"],
                datasets: [{
                    backgroundColor: ["#3e95cd","#3cba9f"],
                    data: [<%= ram.servidorA%>, <%= ram.servidorB%>]
                }]
            },
            options: {          
            title: {
                display: true,
                text: '% RAM LIBRE '
            },
            scales: {
                    yAxes: [{
                        ticks: {
                            suggestedMin: 0,
                            suggestedMax: 100
                        }
                        }]
        }
    }
        });
  </script>


<div style="width:800px; margin:0 auto;"><canvas id="cpu"></canvas></div>
<script>
